<div class = "loginbox">
  <div class = "loginbox-top">
    <div class = "loginbox-top-maintitle">
      LOGIN
    </div>
    <div class = "loginbox-top-subtitle">
      ログイン
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class = "loginbox-buttom">
    <div class = "loginbox-buttom-left">
      <div class="field">
        <%= f.label :email,"メールアドレス",class:"field-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"field-input" %>
      </div>

      <div class="field">
        <%= f.label :password,"パスワード",class:"field-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"field-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="remember">
          <%= f.check_box :remember_me, class:"remember-checkbox" %>
          <%= f.label :remember_me, "パスワードを記憶する", class:"remember-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class:"actions-button" %>
      </div>
    </div>
    <div class = "loginbox-buttom-right">
      <div class = "right-maintitle">
        はじめてご利用の方
      </div>
      <div class = "right-subtitle">
        ご利用には会員登録が必要です
      </div>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class = "sign-in">
          <%= link_to "新規会員登録", new_registration_path(resource_name), class:"sign-in-button" %><br />
          <% end %>
        </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <% end %>
</div>
