<div class = "sign-up">
  <div class ="sign-up-title">
    新規会員登録
  </div>
  <div class = "sign-up-box">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class = "error">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>
      <div class= "image-name">
        <div class="sign-in-field">
          <div class = "image-box"></div>
          <% f.label :image,class:"sign-in-field-label" %>
          <% f.file_field :image, class:"sign-in-profileimage" %>
        </div>
        <div class="sign-in-field">
          <%= f.label :name, "名前",class:"sign-in-field-label" %><br />
          <%= f.text_field :name, placeholder:"名前を入力してください", autofocus: true, autocomplete: "name",class:"sign-in-field-input1" %>
        </div>
      </div>
      <div class = "sign-up-content">
        <div class = "sign-up-items">
          <div class="sign-in-field-label">メールアドレス</div>
          <div class="sign-in-field-label">パスワード</div>
          <div class="sign-in-field-label">確認用</div>
          <div class="sign-in-field-label">性別</div>
          <div class="sign-in-field-label">年齢</div>
          <div class="sign-in-field-label">誕生日</div>
          <div class="sign-in-field-label">MTBI</div>
          <div class="sign-in-field-label">LINE ID</div>
          <div class="sign-in-field-label">PayPay ID</div>
          <div class="sign-in-field-label">背景画像</div>
          <div class="sign-in-field-label-profile">プロフィール</div>
        </div>
        <div class = "sign-up-form">
          <div class="sign-in-field">
            <% f.label :email %>
            <%= f.email_field :email, placeholder:"メールアドレスを入力してください", autocomplete: "email", class:"sign-in-field-input2" %>
          </div>
          <div class="sign-in-field">
            <% f.label :password %>
            <%= f.password_field :password, placeholder:"パスワードを入力してください", autocomplete: "new-password", class:"sign-in-field-input2" %>
          </div>
          <div class="sign-in-field">
            <% f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, placeholder:"確認のため、もう一度パスワードを入力してください", autocomplete: "new-password", class:"sign-in-field-input2" %>
          </div>
          <div class="sign-in-field">
            <% f.label :gender %>
            <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:""}) %>
          </div>
          <div class="sign-in-field">
            <%  f.label :age %>
            <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"select-box", id:""}) %>
          </div>
          <div class="sign-in-field">
            <%  f.label :birthday %>
            <%= f.date_field :birthday, class:"calendar" %>
          </div>
          <div class="sign-in-field">
            <% f.label :mbti %>
            <%= f.collection_select(:mbti_id, Mbti.all, :id, :name, {}, {class:"select-box", id:""}) %>
          </div>
          <div class="sign-in-field">
            <% f.label :line %>
            <%= f.text_field :line, placeholder:"LINE IDを入力してください", autocomplete: "line",class:"sign-in-field-input2" %>
          </div>
          <div class="sign-in-field">
            <% f.label :paypay %>
            <%= f.text_field :paypay, placeholder:"PayPay IDを入力してください", autocomplete: "paypay",class:"sign-in-field-input2" %>
          </div>
          <div class="sign-in-field">
            <div class = "image-backgroundimage"></div>
            <% f.label :image %>
            <% f.file_field :image, class:"sign-in-backgroundimage" %>
          </div>
          <div class="sign-in-field">
            <% f.label :profile %>
            <%= f.text_area :profile, placeholder:"プロフィールを入力してください", autocomplete: "profile",class:"sign-in-field-input3" %>
          </div>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "新規登録",class:"sign-in-actions-button"%>
      </div>
    <% end %>
  </div>
</div>